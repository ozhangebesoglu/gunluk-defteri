{
  "name": "gunce-diary",
  "version": "1.0.0",
  "description": "Modern, güvenli ve şifrelenmiş günce defteri uygulaması",
  "main": "src/main/main.js",
  "author": "Ozhan Gebesoglu",
  "license": "MIT",
  "private": true,
  "keywords": [
    "electron",
    "diary",
    "journal",
    "react",
    "postgresql"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "cd frontend && npm run dev",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "dev:backend": "cd backend && npm run dev",
    "dev:full": "concurrently \"npm run dev:vite\" \"npm run dev:backend\" \"npm run dev:electron\"",
    "build": "npm run build:frontend && npm run build:electron",
    "build:frontend": "cd frontend && npm run build",
    "build:electron": "electron-builder",
    "build:all": "electron-builder -mwl",
    "build:exe": "npm run build:frontend && electron-builder --win --x64",
    "build:exe:ia32": "npm run build:frontend && electron-builder --win --ia32",
    "dist": "npm run build:exe",
    "dist:all": "npm run build:frontend && electron-builder -mwl",
    "test": "jest",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write src/**/*.{js,jsx,ts,tsx,json,css,md}",
    "db:setup": "npm run db:migrate && npm run db:seed",
    "db:migrate": "knex migrate:latest",
    "db:rollback": "knex migrate:rollback",
    "db:seed": "knex seed:run",
    "db:fresh": "knex migrate:rollback --all && knex migrate:latest && knex seed:run",
    "db:status": "knex migrate:status",
    "db:reset": "npm run db:rollback && npm run db:migrate",
    "security:audit": "npm audit && npm run lint",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "@electron/fuses": "^1.8.0",
    "@electron/rebuild": "^3.4.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.7",
    "@xenova/transformers": "^2.6.2",
    "argon2": "^0.31.2",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.6.0",
    "electron-log": "^5.0.1",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2",
    "knex": "^3.1.0",
    "pg": "^8.11.3",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1"
  },
  "build": {
    "appId": "com.gunce.diary",
    "productName": "Gunce Diary",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "directories": {
      "output": "dist-electron",
      "buildResources": "build"
    },
    "files": [
      "src/main/**/*",
      "frontend/dist/**/*",
      "db/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "node_modules/electron-log/**/*",
      "node_modules/argon2/**/*",
      "node_modules/@xenova/transformers/**/*"
    ],
    "extraResources": [
      {
        "from": "build/",
        "to": "build/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "requestedExecutionLevel": "asInvoker",
      "verifyUpdateCodeSignature": false
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": null,
      "entitlementsInherit": null
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.png",
      "category": "Office"
    },
    "nsis": {
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "${productName}-${version}-Setup.${ext}",
      "license": "LICENSE",
      "language": "1055",
      "allowElevation": true,
      "perMachine": false
    },
    "compression": "normal",
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false
  }
}
