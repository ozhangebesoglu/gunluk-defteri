# ===========================================
# GÜNCE DEFTERİ - ENVIRONMENT VARIABLES
# ===========================================

# =================== DATABASE ===================
# Development PostgreSQL (Local)
DB_HOST=127.0.0.1
DB_PORT=5433
DB_USER=postgres
DB_PASSWORD=your_postgres_password_here
DB_NAME=diary_app
DB_SSL=false

# =================== SUPABASE ===================
# Production Web Database (Get from Supabase Dashboard)
SUPABASE_URL="YOUR_SUPABASE_URL"
SUPABASE_ANON_KEY="YOUR_SUPABASE_ANON_KEY"
SUPABASE_SERVICE_KEY="YOUR_SUPABASE_SERVICE_KEY"

# =================== ELECTRON ===================
NODE_ENV=development
ELECTRON_ENV=development

# =================== SECURITY ===================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
APP_SECRET=your_random_32_character_secret_key_here
ENCRYPTION_KEY=your_256_bit_encryption_key_here

# =================== FEATURES ===================
ENABLE_ENCRYPTION=true
ENABLE_CLOUD_SYNC=true
ENABLE_ANALYTICS=false

# =================== DEPLOYMENT ===================
# Production values
PROD_DATABASE_URL=your_production_database_url
PROD_SUPABASE_URL=your_production_supabase_url
PROD_SUPABASE_KEY=your_production_supabase_key

# Supabase
VITE_SUPABASE_URL=""
VITE_SUPABASE_ANON_KEY=""

# API URL
VITE_API_BASE_URL="http://localhost:3001/api/v1"

# Sentry - For error tracking and monitoring
# Get your DSN from your Sentry project settings
VITE_SENTRY_DSN=""

# =================== SERVER ===================
# Port for the backend Express server
PORT=3001
# Log file for security audits
AUDIT_LOG_PATH="./backend/logs/audit.log"
# Secret for signing session cookies. Generate with `openssl rand -hex 32` for production
SESSION_SECRET="bir-guvenli-ve-rastgele-dizi-uret"

# =================== FRONTEND ===================
# URL of the running frontend application for CORS
FRONTEND_URL="http://localhost:5173"

